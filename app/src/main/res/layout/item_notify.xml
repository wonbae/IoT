<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/weather_notice_section"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/notify_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/weather_notice_section"
        android:scaleType="fitXY"/>
    <FrameLayout
        android:id="@+id/weather_section_subtitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#c7231F20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:weightSum="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="52dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.9"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="날씨"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:layout_marginTop="-5dp"
                    android:layout_weight="0.1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="오늘의 날씨는 어떠합니다"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>